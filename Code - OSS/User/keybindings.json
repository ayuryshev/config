// Place your key bindings in this file to overwrite the defaults
[
 
    {
        "key": "alt+space",
        "command": "go.test.cursor",
        "when": "editorTextFocus"
    },
 
    {
        "key": "ctrl+shift+x",
        "command": "-workbench.view.extensions"
    },
     {
        "key": "alt+c",
        "command": "workbench.action.terminal.toggleTerminal"
    },{     "key": "ctrl+5",         
        "command": "editor.action.jumpToBracket",
        "when": "editorTextFocus"
    },{
        "key": "ctrl+w space",
        "command": "workbench.action.minimizeOtherEditors",
        "when": "editorTextFocus"
    },{ 
        "key": "ctrl+w o",
        "command": "workbench.action.maximizeEditor"
        // "when": "editorTextFocus"
    },{
        "key": "ctrl+w left",
        "command": "workbench.action.navigateLeft"
        // ,"when": "editorTextFocus"
    },{
        "key": "ctrl+w right",
        "command": "workbench.action.navigateRight"
        // ,"when": "editorTextFocus"
    },{
        "key": "ctrl+w up",
        "command": "workbench.action.navigateUp"
        // ,"when": "editorTextFocus"
    },{
        "key": "ctrl+w down",
        "command": "workbench.action.navigateDown",
        "when": "editorTextFocus"
    },{
        "key": "ctrl+w w",
        "command": "workbench.action.toggleMaximizedPanel"
        //"when": "editorTextFocus"
    },{
    "key": "ctrl+shift+`",
    "command": "workbench.action.toggleMaximizedPanel",
    "when": "editorTextFocus"
},{
    "key": "ctrl+w `",
    "command": "workbench.action.togglePanel",
    "when": "editorTextFocus"
},{
    "key": "ctrl+w c",
    "command": "workbench.action.closeActiveEditor",
    "when": "editorTextFocus"
},


    {
        "key": "ctrl+w =",
        "command": "workbench.action.evenEditorWidths",
        "when": "editorTextFocus"
    },

    { "key": "ctrl+w z",              "command": "workbench.action.toggleZenMode" },


{ "key": "ctrl+o",            "command": "workbench.action.navigateBack" },
{ "key": "ctrl+i",          "command": "workbench.action.navigateForward" },

{
    "key": "ctrl+enter",
    "command": "workbench.action.maximizeEditor",
    "when": "editorTextFocus"
},

{ "key": "ctrl+w",                "command": "-workbench.action.closeActiveEditor" },

{ "key": "ctrl+w",                "command": "-workbench.action.closeWindow",
                                    "when": "!editorIsOpen"
                                },
                                {
                                    "key": "ctrl+w h",
                                    "command": "workbench.action.moveEditorToPreviousGroup"
                                },
{
    "key": "ctrl+w ctrl+left",
    "command": "commandId",
    "when": "editorTextFocus"
},{
                                    "key": "ctrl+w h",
                                    "command": "workbench.action.moveEditorToPreviousGroup"
                                },                                
                                {
                                    "key": "ctrl+alt+left",
                                    "command": "-workbench.action.moveEditorToPreviousGroup"
                                },
                                {
                                    "key": "ctrl+w l",
                                    "command": "workbench.action.moveEditorToNextGroup"
                                },
                                {
                                    "key": "ctrl+w ctrl+right",
                                    "command": "commandId",
                                    "when": "editorTextFocus"
                                },{
                                    "key": "ctrl+w l",
                                    "command": "workbench.action.moveEditorToNextGroup"
                                },
                                {
                                    "key": "ctrl+alt+right",
                                    "command": "-workbench.action.moveEditorToNextGroup"
                                },
                                {
                                    "key": "numpad_add",
                                    "command": "git.stageChange"
                                },
                                {
                                    "key": "ctrl+m b",
                                    "command": "markdown.extension.editing.toggleBold",
                                    "when": "editorTextFocus && editorLangId == 'markdown'"
                                },
                                {
                                    "key": "ctrl+b",
                                    "command": "-markdown.extension.editing.toggleBold",
                                    "when": "editorTextFocus && editorLangId == 'markdown'"
                                }
                            ]